<h1>Name: <%= @artist.name %></h1>
<h3>Bio: </h3>
<p><%= @artist.bio %></p>
<%# if the artist has genres, list them %>
<% if @artist.genres %>
  <h3>Genres: </h3>
  <ul>
  <% @artist.genres.each do |genre| %>
    <%= link_to(genre.name, genre) %>
  <% end %>
  </ul>
<% end %>
<%#if the artist has songs, list them%>
<% if @artist.songs %>
  <h3>Songs:</h3>
  <ul>
    <% @artist.songs.each do |song| %>
    <li><%= link_to(song.name, song) %></li>
    <% end %>
  </ul>
<% end %>