<h3>New Song Form</h3>

<%= form_for @song do |f| %>
  <%= f.label 'Name' %><br>
  <%= f.text_field :name %><br>

  <%= f.label 'Artist id' %><br>
  <%= f.number_field :artist_id %><br>

  <%= f.label 'Genre id' %><br>
  <%= f.number_field :genre_id %><br>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= f.submit %>
<% end %>
